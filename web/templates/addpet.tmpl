{{define "content"}}
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card">
        <div class="card-body">
          <form action="/pets/add/submit" method="POST" accept-charset="UTF-8">
            {{ .csrfField }}
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control" id="name" placeholder="Enter pet's name" name="name">
            </div>
            <div class="form-group">
              <label for="typeSelect">Type</label>
              <select class="form-control" id="typeSelect" name="type">
                <option value="0">Unknown</option>
                <option value="1">Cat</option>
                <option value="2">Dog</option>
              </select>
            </div>
            <div class="form-group">
              <label for="sizeSelect">Age</label>
              <select class="form-control" id="sizeSelect" name="age">
                <option value="0">Unknown</option>
                <option value="1">Baby</option>
                <option value="2">Young</option>
                <option value="3">Adult</option>
                <option value="4">Senior</option>
              </select>
            </div>
            <div class="form-group">
              <label for="genderSelect">Size</label>
              <select class="form-control" id="genderSelect" name="gender">
                <option value="0">Unknown</option>
                <option value="1">Male</option>
                <option value="2">Female</option>
              </select>
            </div>
            <div class="form-group">
              <label for="descriptionTextArea">Description</label>
              <textarea class="form-control" id="descriptionTextArea" rows="4" name="description"></textarea>
            </div>
            <div class="form-group">
              <label for="photo">Pet's photo</label>
              <input type="file" class="form-control-file" id="photo" accept="image/*" name="photo">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>
        </div>
      </div>
    </div>
  </div>
{{end}}
